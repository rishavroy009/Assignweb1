<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DASH.js ClearKey Demo</title>
    <script src="https://cdn.dashjs.org/latest/dash.all.min.js"></script>
</head>
<body>
    <h1>DASH.js ClearKey Demo</h1>
    <video id="videoPlayer" controls style="width: 100%; height: auto;"></video>

    <script>
        var url = 'http://localhost/output.mpd'; // URL of the MPD file

        var player = dashjs.MediaPlayer().create();
        player.initialize(document.querySelector("#videoPlayer"), url, true);

        var clearkey = {
            "keys": [{
                "kty": "oct",
                "k": "q83DEkVWXTNyNFpBMEFiSjROVg==",  // Base64-encoded key
                "kid": "EjRWeChhMBTEiUwyV8kX3g=="  // Base64-encoded key ID
            }]
        };

        player.setProtectionData({
            "org.w3.clearkey": {
                "clearkeys": clearkey
            }
        });
    </script>
</body>
</html>
