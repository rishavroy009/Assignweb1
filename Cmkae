cmake_minimum_required(VERSION 3.10)
project(WebOSJsonReader)

set(CMAKE_CXX_STANDARD 14)

# Specify the path to libpbnjson
set(PBNJSON_INCLUDE_DIR "/path/to/webos-tv-desktop/libpbnjson/include")
set(PBNJSON_LIBRARY_DIR "/path/to/webos-tv-desktop/libpbnjson/build/src/pbnjson_cxx")

# Find and include the necessary packages
find_package(PkgConfig REQUIRED)
pkg_check_modules(GLIB REQUIRED glib-2.0)

include_directories(${PBNJSON_INCLUDE_DIR} ${GLIB_INCLUDE_DIRS})
link_directories(${PBNJSON_LIBRARY_DIR} ${GLIB_LIBRARY_DIRS})
include_directories(include)  # Include header files directory

# Add executable
add_executable(webos-service main.cpp)

# Link against libpbnjson_cpp and GLib libraries
target_link_libraries(webos-service pbnjson_cpp ${GLIB_LIBRARIES})
