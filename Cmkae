cmake_minimum_required(VERSION 3.10)
project(JsonParser)

set(CMAKE_CXX_STANDARD 14)

# Specify the path to libpbnjson
set(PBNJSON_INCLUDE_DIR "/path/to/libpbnjson/include")
set(PBNJSON_LIBRARY_DIR_C "/path/to/libpbnjson/build/src/pbnjson_c")
set(PBNJSON_LIBRARY_DIR_CPP "/path/to/libpbnjson/build/src/pbnjson_cpp")

# Find and include the necessary packages
find_package(PkgConfig REQUIRED)
pkg_check_modules(GLIB REQUIRED glib-2.0)

include_directories(${PBNJSON_INCLUDE_DIR} ${GLIB_INCLUDE_DIRS})
link_directories(${PBNJSON_LIBRARY_DIR_C} ${PBNJSON_LIBRARY_DIR_CPP} ${GLIB_LIBRARY_DIRS})
include_directories(include)  # Include header files directory

# Add executable
add_executable(json-parser main.cpp)

# Link against libpbnjson_cpp and GLib libraries
target_link_libraries(json-parser pbnjson_cpp pbnjson_c ${GLIB_LIBRARIES})
