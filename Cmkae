cmake_minimum_required(VERSION 3.10)
project(webos-service)

set(CMAKE_CXX_STANDARD 11)
set(CMAKE_CXX_STANDARD_REQUIRED True)

# Locate libpbnjson using pkg-config
find_package(PkgConfig REQUIRED)
pkg_check_modules(PBNJSON REQUIRED pbnjson_cpp)

# Include directories for libpbnjson
include_directories(${PBNJSON_INCLUDE_DIRS})

# Source files
add_executable(webos-service src/main.cpp)

# Link against libpbnjson
target_link_libraries(webos-service ${PBNJSON_LIBRARIES})
