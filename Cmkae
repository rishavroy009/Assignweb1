<!DOCTYPE html>
<html>
<head>
    <title>ClearKey DRM Test with Shaka Player</title>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/shaka-player/3.2.1/shaka-player.compiled.js"></script>
</head>
<body>
    <h1>ClearKey DRM Encrypted Video</h1>
    <video id="video" width="640" height="360" controls></video>

    <script>
        async function initPlayer() {
            const video = document.getElementById('video');
            const player = new shaka.Player(video);

            // Listen for error events
            player.addEventListener('error', onErrorEvent);

            // Load the DASH manifest
            try {
                // Load the DASH manifest
                await player.load('http://localhost/out.mpd');

                // Set up ClearKey protection
                const keySystem = 'org.w3.clearkey';
                const keyId = 'f239e769f45bb2c1b5e5f22b014fed8c'; // Replace with your KeyID
                const key = '1e4b78991234abcd56781234def56789'; // Replace with your Key

                // Create a key object
                const clearkey = {};
                clearkey[keyId] = key;

                // Set the key for ClearKey
                player.configure({
                    drm: {
                        servers: {
                            [keySystem]: null, // No license server needed for ClearKey
                        },
                        advanced: {
                            [keySystem]: {
                                clearkeys: clearkey
                            }
                        }
                    }
                });

            } catch (e) {
                onError(e);
            }
        }

        // Handle error events
        function onErrorEvent(event) {
            console.error('Error code', event.detail.code, 'object', event.detail);
        }

        // Initialize the player
        initPlayer();
    </script>
</body>
</html>
