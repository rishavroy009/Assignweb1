// ptag is the specific <p> element within which you want to apply the padding inheritance
function inheritPaddingFromP(ptag) {
    // Select all <span> elements that are descendants of the specified <p> tag
    const spanElements = ptag.querySelectorAll('span');

    // Get the computed padding styles of the <p> tag
    const pPadding = window.getComputedStyle(ptag).padding;

    spanElements.forEach((span) => {
        // Check if the <span> contains only the zero-width space, represented by '&#x200b;'
        if (span.innerHTML.trim() === '&#x200b;' || span.textContent.trim() === '\u200b') {
            // Apply the padding style of the <p> tag to the <span>
            span.style.padding = pPadding;
        }
    });
}

// Example usage: call the function with the specific <p> tag element
inheritPaddingFromP(ptag);
